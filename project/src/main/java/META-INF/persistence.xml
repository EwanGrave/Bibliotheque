<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="bibliotheque" transaction-type="JTA">
		<jta-data-source>java:/MySqlBibliotheque</jta-data-source>
		<class>model.bean.AuthorBean</class>
		<class>model.bean.BookBean</class>
		<class>model.bean.GenreBean</class>
		<class>model.bean.UserBean</class>
		<class>model.bean.LoanBean</class>
		<properties>
			<property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
		</properties>
	</persistence-unit>
</persistence>
